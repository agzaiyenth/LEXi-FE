{
  "expo": {
    "name": "LEXi",
    "slug": "lexi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "lexi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#95B9B2"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need access to your microphone to record audio.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.lexilk.lexi"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFF9EB"
      },
      "package": "com.lexilk.lexi",
      "permissions": [
        "RECORD_AUDIO",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "5753a34d-5815-4818-ae00-4fbefd718f93"
      }
    },
    "owner": "lexilk",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/5753a34d-5815-4818-ae00-4fbefd718f93"
    }
  }
}
